<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="loginModel"
            type="com.zixin.login.viewmodel.activity.LoginViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        tools:context="com.zixin.login.activity.LoginActivity">
        <!--选择用户类型-->

        <RelativeLayout

            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y49"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y206"
           >
            <LinearLayout
                android:layout_marginLeft="@dimen/x74"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="个人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="@dimen/x74"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/white"
                    android:text="企业"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <!--用户登录账号-->
        <RelativeLayout
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y49"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y285"
            android:background="@drawable/login_use">

            <EditText
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x74"
                android:background="@null"
                android:hint="用户名"
                android:textColorHint="@color/white" />
        </RelativeLayout>
        <!--用户密码-->
         <RelativeLayout

            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/x49"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y364"
            android:background="@drawable/login_pwd">

            <EditText
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x74"
                android:background="@null"
                android:hint="密码"
                android:textColorHint="@color/white" />
        </RelativeLayout>
             <!--登录按钮-->
         <Button
            android:background="@drawable/login_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y473"
            android:textColor="@color/white"
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/x49" />
        
          <!--注册和忘记密码按钮-->
       <LinearLayout
           android:layout_marginTop="@dimen/y548"

           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
         <TextView
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="@dimen/x109"
             android:textColor="@color/white"
             android:text="注册账号"
             android:layout_width="@dimen/x67"
             android:layout_height="@dimen/y23" />
           <View
               android:layout_marginLeft="@dimen/x19"
               android:layout_gravity="center_vertical"
               android:background="@color/white"
               android:layout_width="@dimen/x1"
               android:layout_height="@dimen/y14"/>
           <TextView
               android:layout_marginLeft="@dimen/x23"
               android:layout_gravity="center_vertical"
               android:textColor="@color/white"
               android:text="忘记密码"
               android:layout_width="@dimen/x67"
               android:layout_height="@dimen/y23" />
       </LinearLayout> 
        
    </RelativeLayout>
</layout>