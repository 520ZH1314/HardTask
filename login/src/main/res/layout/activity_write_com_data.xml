<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="writeComModel"
            type="com.zixin.login.viewmodel.activity.WriteComViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login"
        tools:context="com.zixin.login.activity.WriteComDataActivity">
        <android.support.v7.widget.CardView

            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y510"
            android:layout_marginLeft="@dimen/x27"
            android:layout_marginTop="@dimen/y58"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">
            <!--提示-->
            <TextView
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y23"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:maxLines="1"
                android:text="完善资料"
                android:textColor="@color/tv_choice_id"
                android:textSize="18sp" />
            <!--企业姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:layout_height="@dimen/y23"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x26"

                    android:text="企业名称"
                    android:textColor="@color/tv_choice_id"
                    android:textSize="14sp" />

                <EditText
                    android:layout_weight="6"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/edit_cursor_color" />
            </LinearLayout>
            <!--联系人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y106"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/y23"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x26"

                    android:text="联系人"
                    android:textColor="@color/tv_choice_id"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="0dip"
                    android:layout_weight="6"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/edit_cursor_color" />

            </LinearLayout>
            <!--邮箱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y152"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="@dimen/y23"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x25"

                    android:text="邮箱"
                    android:textColor="@color/tv_choice_id"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="0dip"
                    android:layout_weight="6"
                    android:layout_height="@dimen/y40"
                    android:layout_marginLeft="@dimen/x45"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/edit_cursor_color" />
                </LinearLayout>
            <!--企业介绍-->
            <LinearLayout
                android:layout_marginTop="@dimen/y198"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y130">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:layout_height="@dimen/y23"
                    android:layout_marginLeft="@dimen/x26"
                    android:layout_gravity="center"
                    android:text="企业介绍"
                    android:textColor="@color/tv_choice_id"
                    android:textSize="14sp" />

                <EditText
                    android:layout_weight="6"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/y130"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x25"
                    android:background="@drawable/underline"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLength="8"
                    android:maxLines="3"
                    android:textCursorDrawable="@drawable/edit_cursor_color" />
            </LinearLayout>

            <!--button-->
            <LinearLayout
                android:layout_marginTop="@dimen/y446"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/login_wr_per_data"
                        android:text="提交"
                        android:textColor="@color/white"


                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y37" />
                    <Button
                        android:id="@+id/login_miss_wr_per_data"
                        android:text="跳过"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"

                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y37" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>