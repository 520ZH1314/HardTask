<?xml version="1.0" encoding="utf-8"?>
<layout>
 <data>
     <variable
         name="mainModel"
         type="com.zixin.main.viewModel.MainViewModel"/>
 </data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zixin.main.activity.MainActivity">

    <FrameLayout
        android:background="@color/white"
        android:id="@+id/mian_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
    </FrameLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/y55">
        <RadioGroup
            android:id="@+id/mian_radiogruop"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="@dimen/y49">
            <RadioButton
                android:id="@+id/mian_card"
                 android:layout_marginTop="@dimen/y7"
                android:drawableTop="@drawable/card_radio_button"
                android:button="@null"
                android:checked="true"
                android:textColor="@color/text_color_radio_button"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="卡牌"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <RadioButton
                android:layout_marginTop="@dimen/y7"
                android:id="@+id/mian_chat"
                android:drawableTop="@drawable/chat_radio_button"
                android:button="@null"
                android:textColor="@color/text_color_radio_button"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="聊天"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <RadioButton
                android:layout_marginTop="@dimen/y7"
                android:id="@+id/mian_appcontext"
                android:drawableTop="@drawable/card_radio_button"
                android:button="@null"
                android:textColor="@color/text_color_radio_button"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="应用"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/mian_rank"
                android:drawableTop="@drawable/rank_radio_button"
                android:layout_marginTop="@dimen/y7"
                android:button="@null"
                android:textColor="@color/text_color_radio_button"
                android:gravity="center"
                android:layout_width="0dp"
                android:text="生涯"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/mian_mine"
                android:drawableTop="@drawable/mine_radio_button"
                android:button="@null"
                android:textColor="@color/text_color_radio_button"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/y7"
                android:text="我的"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
</layout>